#!/usr/bin/env bash
#Prints bad luck on 4 and good luck on 8
COUNT=1
while [ $COUNT -le 10 ]; do
    if [ $COUNT -eq '4' ]
    then
	echo "bad luck"
    elif [ $COUNT -eq '8' ]
    then
	echo "good luck"
    else
	echo "Holberton School"
    fi
    let COUNT=COUNT+1
done

