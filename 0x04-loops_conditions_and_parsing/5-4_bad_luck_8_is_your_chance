#!/usr/bin/env bash
# Thi script loops from 1 to 10. It prints "bad luck" the 4th iteration, "good luck" the 8th iteration, and "Holberton School for all others.
i=1
while (( i <= 10 ))
do
	if (( i == 4 ))
	then
		echo "bad luck"
	elif ((i == 8 ))
	then
		echo "good luck"
	else
		echo "Holberton School"
	fi
	i=$(( i + 1 ))
done


